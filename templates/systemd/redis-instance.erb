[Unit]
Description=Redis persistent key-value database
After=network.target

[Service]
ExecStart=/usr/bin/redis-server <%= @config_file %> --daemonize no
ExecStop=/usr/bin/redis-shutdown nothing <%= @service_name %>
User=<%= @redis_user %>
Group=<%= @redis_group %>

[Install]
WantedBy=multi-user.target
